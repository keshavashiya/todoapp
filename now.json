{
  "version": 2,
  "builds": [{ "src": "app.js", "use": "@now/node-server" }],
  "routes": [
    {
      "src": "/",
      "dest": "/app.js",
      "methods": ["GET"]
    },
    {
      "src": "/",
      "dest": "/app.js",
      "methods": ["POST"]
    },
    {
      "src": "/getTodos",
      "dest": "/app.js",
      "methods": ["GET"]
    },
    {
      "src": "/:id",
      "dest": "/app.js",
      "methods": ["PUT"]
    },
    {
      "src": "/:id",
      "dest": "/app.js",
      "methods": ["DELETE"]
    }
  ]
}
